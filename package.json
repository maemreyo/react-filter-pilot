{
  "name": "@matthew.ngo/react-filter-pilot",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "version": "0.1.0",
  "description": "A powerful and flexible React hook for managing filters, pagination, sorting, and data fetching with URL synchronization",
  "keywords": [
    "react",
    "filter",
    "pagination",
    "sorting",
    "url",
    "query",
    "tanstack",
    "react-query"
  ],
  "author": "HturWehttam <matthew.ngo1114@example.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/react-filter-pilot.umd.js",
  "module": "./dist/react-filter-pilot.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-filter-pilot.es.js",
      "require": "./dist/react-filter-pilot.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && tsc -p tsconfig.build.json && vite build && rimraf dist/temp",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview",
    "publish:beta": "pnpm publish --tag beta",
    "publish:latest": "pnpm publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "playground": "cd playground && pnpm dev"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tanstack/react-query": "^5.76.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "react-router-dom": "^7.6.0",
    "rimraf": "^6.0.1",
    "terser": "^5.39.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=4.0.0 || >=5.0.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.3.5",
      "rollup": "^4.9.0"
    }
  }
}
